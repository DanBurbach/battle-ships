<h1>This is Index.html.erb</h1>

<h1>It is turn of Player <%=@player_id%></h1>

<%@moves.each do |move|%>
Player <%=move.player_id %>, x <%=move.x%>, y <%=move.y%>, hit? <%=move.hit%> <br>
<%end%>
<hr>

<% if @player_id == 1 %>
<div class="container battleship">
  <h4>PLAYER 1 click here PLAYER 2's Ocean (User Name here)</h4>
  <table class="table">
    <% data_x = 1 %>
    <% data_y = 1 %>
    <thead class="thead-dark">
      <tr>
        <th scope="col">X</th>
        <th scope="col">A</th>
        <th scope="col">B</th>
        <th scope="col">C</th>
        <!-- <th scope="col">D</th>
        <th scope="col">E</th>
        <th scope="col">F</th>
        <th scope="col">G</th>
        <th scope="col">H</th>
        <th scope="col">I</th>
        <th scope="col">J</th> -->
      </tr>
    </thead>
    <% 3.times do %>
    <tr>
      <th class="row-dark" scope="row">
        <%= data_y %>
      </th>
      <% 3.times do %>

      <td><% player_cells = @cells.select{|element| element.player == 2}.select{|element| element.y == data_y}.select{|element| element.x == data_x} %>
        <%= form_for player_cells do |t| %><%= t.submit ""%>
        <%end%>
        <% if player_cells[0].ship %><p>SHIP</p>
        <% else %><p>WATER<p>
        <%end%>
        <% if player_cells[0].hit %><p>HIT</p>
        <% else %><p>NOHIT</p>
        <%end%>
      </td>

        <% data_x += 1 %>
        <%end%>
        <% data_x = 1 %>
        <% data_y += 1 %>
      </tr>
      <%end%>
    </table>
  </div>
  <%end%>




